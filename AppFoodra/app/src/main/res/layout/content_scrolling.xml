<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wristcode.deliwala.HotelActivity"
    tools:showIn="@layout/fragment_overview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:text="Spice n Ice"

        android:id="@+id/txthotelname"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:paddingTop="30dp"
        android:paddingBottom="0dp"
        android:textSize="25sp"
        android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/txtlocation"
            android:text="End point Road, Manipal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--android:tint="#CCAA23"-->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/clock"
                    android:tint="#ff8a65" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/txttime"
                    android:textColor="#666"
                    android:layout_height="wrap_content"
                    android:text="10 - 12 AM"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:tint="#ffb74d"
                    android:src="@drawable/loca"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtdistance"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#666"
                    android:layout_height="wrap_content"
                    android:text="4.5 KM"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:tint="#f06292"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/food"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/txtdelivery"
                    android:textColor="#666"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Delivery"/>
            </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:id="@+id/txtdesc"
        android:text="@string/large_text" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
